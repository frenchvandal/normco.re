{
  "lock": "deno.lock",
  "nodeModulesDir": "auto",
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.17",
    "@std/testing": "jsr:@std/testing@1.0.17",
    "@std/path": "jsr:@std/path@1.1.4",
    "@std/fs": "jsr:@std/fs@1.0.22",
    "@std/fmt": "jsr:@std/fmt@1.0.9",
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@0.1.56",
    "playwright": "npm:playwright@1.58.0",
    "pixelmatch": "npm:pixelmatch@7.1.0",
    "pngjs": "npm:pngjs@7.0.0",
    "lume/": "https://deno.land/x/lume@v3.1.4/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.14.12/",
    "lume/markdown-plugins/": "https://deno.land/x/lume_markdown_plugins@v0.11.0/",
    "lume/jsx-runtime": "https://cdn.jsdelivr.net/gh/oscarotero/ssx@0.1.14/jsx-runtime.ts",
    "@mdit/plugin-alert": "npm:@mdit/plugin-alert@0.22.3"
  },
  "tasks": {
    "build": {
      "description": "Build the site for production",
      "command": "deno task lume"
    },
    "serve": {
      "description": "Run and serve the site for development",
      "command": "deno task lume -s"
    },
    "lume": {
      "description": "Run Lume command",
      "command": "echo \"import 'lume/cli.ts'\" | deno run -A -"
    },
    "update-deps": {
      "description": "Update dependencies",
      "command": "deno update --latest -r && rm -f deno.lock && deno install"
    },
    "cms": {
      "description": "Run the Lume CMS",
      "command": "deno task lume cms"
    },
    "visual:capture": {
      "description": "Capture screenshots for visual comparison",
      "command": "deno run -A tests/visual/capture.ts"
    },
    "visual:compare": {
      "description": "Compare Lume vs PaperMod screenshots",
      "command": "deno run -A tests/visual/compare.ts"
    },
    "visual:tokens": {
      "description": "Compare CSS tokens between Lume and PaperMod",
      "command": "deno run -A tests/visual/tokens.ts"
    },
    "visual:report": {
      "description": "Generate visual comparison report",
      "command": "deno run -A tests/visual/report.ts"
    },
    "visual:all": {
      "description": "Run all visual tests (capture, compare, report)",
      "command": "deno task visual:capture && deno task visual:compare && deno task visual:report"
    }
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-import-prefix"
      ]
    },
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.4/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site",
      "LICENSE"
    ]
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ]
}
