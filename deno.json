{
  "lock": "deno.lock",
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.1.4/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.14.12/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "update-deps": "deno run -A --quiet 'https://deno.land/x/nudd@v0.2.11/cli.ts' update plugins.ts deno.json",
    "update-cache": "deno cache --reload --lock=deno.lock plugins.ts deno.json",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "temporal"
  ]
}
