{
  "lock": "deno.lock",
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.1.4/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.14.12/",
    "lume/markdown-plugins/": "https://deno.land/x/lume_markdown_plugins@v0.11.0/",
    "@mdit/plugin-alert": "npm:@mdit/plugin-alert@0.22.3"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "update-deps": "deno update --latest -r --lock=deno.lock && rm -f deno.lock && deno install",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-import-prefix"
      ]
    },
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.4/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ]
}
